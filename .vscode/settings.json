{
  "scss.lint.unknownAtRules": "ignore",
  "exportall.config.folderListener": [
    "/src/app/interfaces",
    "/src/app/helpers"
  ],
  "files.exclude": {
    "dist\\grandprod": true,
    "dist": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.validate": ["typescript", "javascript"],
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "yaml.schemas": {
    "./schemas/hero.schema.json": "gamedata/hero/*.yml",
    "./schemas/item.schema.json": "gamedata/item/*.yml",
    "./schemas/monster.schema.json": "gamedata/monster/*.yml",
    "./schemas/pet.schema.json": "gamedata/pet/*.yml",
    "./schemas/stage.schema.json": "gamedata/stage/*.yml",
    "./schemas/trinket.schema.json": "gamedata/trinket/*.yml",
    "./schemas/weapon.schema.json": "gamedata/weapon/*.yml"
  }
}
