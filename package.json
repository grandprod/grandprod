{
  "name": "grandprod",
  "version": "0.0.1",
  "scripts": {
    "start": "concurrently \"npm run start:app\" \"npm run gamedata:watch\"",
    "start:app": "ng serve --open --port 9766",
    "setup": "npm run gamedata:build",
    "lint": "ng lint",
    "test": "vitest run",
    "test:watch": "vitest --ui --api 9899",
    "build:copychangelog": "cpy CHANGELOG.md CHANGELOG-current.md dist/grandprod/browser",
    "build:syncversion": "ts-node scripts/build-syncversion",
    "build:versioninfo": "ts-node scripts/build-versioninfo",
    "build:blogpost": "ts-node scripts/build-blogpost",
    "build:electron": "npm run build && npm run build:syncversion && npm run build:electron:package",
    "build:electron:package": "cd electron && npm run make",
    "build": "npm run build:versioninfo && npm run gamedata:build && npm run gamedata:art:spritesheets && ng build --configuration production && npm run build:copychangelog",
    "gamedata:watch": "ts-node scripts/gamedata-watch",
    "gamedata:build": "ts-node scripts/gamedata-build",
    "gamedata:art:spritesheets": "ts-node scripts/gamedata-art-spritesheets",
    "schemas:generate": "npx ts-node scripts/schema-generate",
    "bump:major": "npm version major -m \"chore(release): Major %s\"",
    "bump:minor": "npm version minor -m \"chore(release): Minor %s\"",
    "bump:patch": "npm version patch -m \"chore(release): Patch %s\"",
    "util:changelog:generate": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "util:changelog:generate:current": "conventional-changelog -p angular -o CHANGELOG-current.md -r 2",
    "util:changelog:commit": "git commit CHANGELOG.md CHANGELOG-current.md -m \"Update changelog\" || true",
    "util:dirtycheck": "ts-node scripts/util-dirtycheck",
    "util:version:reversion": "ts-node scripts/util-postversion-reversion",
    "preversion": "npm run util:dirtycheck && npm run lint && npm run test && npm run build",
    "postversion": "npm run util:changelog:generate && npm run util:changelog:generate:current && npm run util:changelog:commit && npm run util:version:reversion && npm run push",
    "push": "git push && git push --tags",
    "postinstall": "npm run gamedata:build && npm run gamedata:art:spritesheets && npm run schemas:generate"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.6",
    "@angular/cdk": "^20.2.0",
    "@angular/common": "^20.1.6",
    "@angular/compiler": "^20.1.6",
    "@angular/core": "^20.1.6",
    "@angular/forms": "^20.1.6",
    "@angular/platform-browser": "^20.1.6",
    "@angular/platform-browser-dynamic": "^20.1.6",
    "@angular/router": "^20.1.6",
    "@ng-icons/core": "^32.1.0",
    "@ng-icons/game-icons": "^32.1.0",
    "@ng-icons/tabler-icons": "^32.1.0",
    "@ng-select/ng-select": "^20.1.0",
    "@ngneat/helipopper": "^11.1.3",
    "@ngneat/hotkeys": "^4.1.0",
    "@sweetalert2/ngx-sweetalert2": "^13.0.0",
    "@taiga-ui/event-plugins": "^4.7.0",
    "@tailwindcss/postcss": "^4.1.11",
    "console-log-colors": "^0.5.0",
    "es-toolkit": "^1.39.9",
    "gameanalytics": "^4.4.7",
    "jimp": "^1.6.0",
    "logger-timer": "^1.0.7",
    "marked": "^16.1.2",
    "ngx-drag-drop": "^20.0.1",
    "ngx-toastr": "^19.0.0",
    "ngxtension": "^5.1.0",
    "rollbar": "^3.0.0-rc.1",
    "rxjs": "^7.8.2",
    "seedrandom": "^3.0.5",
    "spritesmith": "^3.5.1",
    "sweetalert2": "^11.22.3",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.1.1",
    "@angular-eslint/eslint-plugin": "20.1.1",
    "@angular-eslint/eslint-plugin-template": "20.1.1",
    "@angular-eslint/schematics": "20.1.1",
    "@angular-eslint/template-parser": "20.1.1",
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.6",
    "@types/fs-extra": "^11.0.4",
    "@types/howler": "^2.2.12",
    "@types/js-yaml": "^4.0.9",
    "@types/mustache": "^4.2.6",
    "@types/node": "^22.15.30",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chokidar": "4.0.3",
    "concurrently": "^9.2.0",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "cpy-cli": "^5.0.0",
    "daisyui": "^5.0.50",
    "eslint": "8.57.0",
    "eslint-plugin-typescript-paths": "^0.0.33",
    "fs-extra": "^11.3.1",
    "git-describe": "^4.1.1",
    "imagemin": "^7.0.1",
    "imagemin-webp": "^6.1.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "ngxtension-plugin": "^5.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "recursive-readdir": "^2.2.3",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "5.8",
    "typescript-json-schema": "^0.65.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-tsconfig-paths": "^3.4.1"
  },
  "overrides": {
    "@sweetalert2/ngx-sweetalert2": {
      "@angular/common": "20",
      "@angular/core": "20"
    }
  }
}
